<% layout("/layouts/boilerplate") %>
<div class="row mt-3 mb-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
<div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label m-0">Username</label>
            <input name="username" id="username" type="text" class="form-control m-0" required/>
            <div class="valid-feedback">Looking good </div>
            <div class="invalid-feedback">Please enter a  Username</div>
        </div>
         <div class="mb-3">
            <label for="email" class="form-label m-0">Email</label>
            <input name="email" id="email" type="email" class="form-control m-0" required/>
            <div class="invalid-feedback">Please enter a Email</div>
            
        </div>
         <div class="mb-3">
            <label for="password" class="form-label m-0">Password</label>
            <input name="password" id="password" type="password" class="form-control m-0" required/>
            <div class="invalid-feedback">Please enter a Password </div>
           
        </div>
        <button class=" btn btn-success">Sign Up</button>
    </form>
    </div>
    </div>
    